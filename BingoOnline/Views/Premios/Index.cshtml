@model IEnumerable<BingoOnline.Models.Premio>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Prêmios</h2>

<p>
    @Html.ActionLink("Novo Prêmio", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomePremio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorPremio)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomePremio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValorPremio)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.PremioId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.PremioId }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.PremioId })
        </td>
    </tr>
}

</table>
